
task("dispatch", "Dispatch ETH to testers")
    .addParam("to", "Address to send ETH")
    .addParam("value", "Amount of ETH")
    .setAction(async (taskArgs) => {
        const signer = new ethers.Wallet(process.env.PRIVATE_KEY, ethers.provider);
        const tx = {
            to: taskArgs.to,
            value: ethers.utils.parseEther(taskArgs.value),
        }
        const txResult = await signer.sendTransaction(tx);
        console.log("Tx hash: ", txResult.hash);
    });